{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    //  Needed for TypeORM
    //  https://github.com/typeorm/typeorm#typescript-configuration
        , "experimentalDecorators": true
        , "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ]
}